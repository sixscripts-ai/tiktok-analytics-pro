# TikTok AI Service Configuration

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Service Configuration
NODE_ENV=development
PORT=3003

# Database Configuration (if using separate database)
# DATABASE_URL=sqlite://./ai_analytics.db

# Cache Configuration
CACHE_TTL=86400  # 24 hours in seconds

# Rate Limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Scheduled Tasks
DAILY_ANALYTICS_TIME=02:00  # 2 AM
WEEKLY_TRENDS_TIME=03:00     # 3 AM on Sundays

# AI Model Configuration
AI_MODEL=gpt-4
AI_MAX_TOKENS=800
AI_TEMPERATURE=0.7

# TikTok Scraping Configuration
SCRAPING_TIMEOUT=30000  # 30 seconds
SCRAPING_RETRY_ATTEMPTS=3
SCRAPING_CACHE_DURATION=86400000  # 24 hours in milliseconds
